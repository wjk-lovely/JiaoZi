@{
    Layout = "~/Views/Shared/Layoutluntan.cshtml";
}
@model JiaoZi.Models.TieziViewModel


@*@{
    Layout = null;
}*@


    <link href="~/Content/iconfont.css" rel="stylesheet" />

    <link href="~/Content/iconfont1.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@
    <link href="~/Content/line.css" rel="stylesheet" />


    <div class="container" id="con">
        <div class="jumbotron" style="max-height:500px;height:176px;margin-top:55px">
            <div style="float:left;margin-top:-69px;margin-right:60px;">
                <i class="iconfont">&#xe60f;</i>
            </div>
            <div style="float:left">
                <h1>教师资格证论坛</h1>
            </div>
            <div style="float:left;margin-top:21px">
                <a href="@Url.Action("Index","Luntan")"><span class="glyphicon glyphicon-home" style="font-size:36px;margin-left:60px;color:black">首页</span></a>
            </div>
            
        </div>
    </div>
    


    <style>
        #Textbox2 {
            width: 400px;
            height: 400px;
            background-color: red;
        }

        #title {
            font-family: STXingkai;
            font-size: larger;
            padding: 20px 20px;
        }

        #body {
            width: 600px;
            height: 400px;
            border-color: brown;
            background-color: crimson;
        }

        .pinglunkuang {
            width: 500px;
            margin-left: 280px;
            margin-right: auto;
            font-family: Arial;
        }



        #TextBox1 {
            max-width: 530px;
            width: 530px;
            height: 141px;
            background-color: lightgray;
        }

        #pingluntextarea {
            height: 133px;
            max-width: 1000px;
            width: 783px;
            margin-top: 75px;
            margin-left: 280px;
            padding-top: 10px;
            border: 3px solid red;
        }

        #img {
            margin-top: 100px;
            /*max-width:600px;
          max-height:600px;*/
            height: 100px;
            width: 90px;
            margin-left: 164px;
        }
    </style>
    

       

   
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            @foreach (var item in Model.Gettiezi)
            {
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="text-align:center;font-size:16px">
                            @Html.DisplayFor(ModelItem => item.Title)
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                           <div class="col-md-4" style="padding-left:106px"><img src="~/images/@Html.DisplayFor(modelItem => item.Users.HeadImage)" style="height:100px;width:90px" /></div>
                            <div class="col-md-4"><h1 style="text-align:center"><span style="font-size:10px;padding-top:10px;">作者：<a href="#">@Html.DisplayFor(modelItem => item.Users.UserName)</a>&nbsp;&nbsp;时间：@item.Remark_Time.ToString("yyyy-MM-dd")</span></h1></div>
                            <div class="col-md-4"></div>

                        </div>
                        
                        <div class="row" style="margin-top:50px;">
                            <div class="col-md-5"><img src="~/图/RemarksImage/@Html.DisplayFor(modelItem => item.Image)" /></div>
                            <div class="col-md-4">@Html.DisplayFor(modelItem => item.RemarkContent)</div>
                           
                        </div>
                    </div>
                </div>
            }
            <div style="margin-left:81%">
                <span class="glyphicon glyphicon-thumbs-up">点赞</span>
                <span class="glyphicon glyphicon-thumbs-down">踩</span>
                <span class="glyphicon glyphicon-share-alt">转发</span>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
    @using (Ajax.BeginForm("PL", "LunTan", new AjaxOptions() { HttpMethod = "post", UpdateTargetId = "PLhidden", InsertionMode = InsertionMode.Replace }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.TextArea("pingluntextarea", new { id = "pingluntextarea", placeholder = "我也来说几句" });
        @*<button type="submit" style="font-weight:500;margin-left:280px;margin-top:50px;width:82px;height:40px;font-size:23px;background-color:#c03f3c">评论</button>*@
        <button type="submit" style="font-weight:500;width:82px;height:40px;font-size:23px;background-color:#c03f3c;margin-left:10px">评论</button>

    }
    <div style="background-color:bisque;width:56%;padding-left:50px;margin-top:150px;margin-left:320px;" id="PLhidden">
        @{Html.RenderAction("PL", "Luntan"); }
    </div>
    <footer class="container-fluid text-center">
        <a href="#con" title="To Top">
            <span class="glyphicon glyphicon-chevron-up"></span>
        </a>

    </footer>






