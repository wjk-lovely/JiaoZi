        <div class="container" id="con">
            <div class="jumbotron" style="max-height:500px;height:176px;margin-top:55px">
                <div style="float:left;margin-top:-69px;margin-right:60px;">
                    <i class="iconfont">&#xe60f;</i>
                </div>
                <div style="float:left">
                    <h1>教师资格证论坛</h1>
                </div>
                <div style="float:left;margin-top:21px">
                    <a href="@Url.Action("Index","Luntan")"><span class="glyphicon glyphicon-home" style="font-size:36px;margin-left:60px;color:black">首页</span></a>
                </div>

            </div>
        </div>
    <div style="background-color:coral">

        <div class="container" style="padding-left:160px;padding-right:160px;">

            <div id="myCarousel" class="carousel slide">
                <!-- 轮播（Carousel）指标 -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                </ol>
                <!-- 轮播（Carousel）项目 -->
                <div class="carousel-inner">
                    <div class="item active" style="height:511px;width:851px">
                        <img src="~/images/Lunbo/1.jpg" alt="First slide" style="height:100%;width:100%">
                    </div>
                    <div class="item" style="height:511px;width:851px">
                        <img src="~/images/Lunbo/2.jpg" alt="Second slide" style="height:100%;width:100%">
                    </div>
                    <div class="item" style="height:511px;width:851px">
                        <img src="~/images/Lunbo/3.jpg" alt="Third slide" style="height:100%;width:100%">
                    </div>
                    <div class="item" style="height:511px;width:851px">
                        <img src="~/images/Lunbo/4.jpg" alt="Third slide" style="height:100%;width:100%">
                    </div>
                </div>
                @*轮播（Carousel）导航*@
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>

            </div>
        </div>
    </div>
    <div style="background-color:antiquewhite;margin-top:95px">
        <div class="container" style="padding-left:160px;padding-right:160px">
            <p style="margin-top:50px"><i style="display:inline-block;width:15px;"></i>标题<i style="display:inline-block;width:323px;"></i>作者<i style="display:inline-block;width:170px;"></i>评论数<i style="display:inline-block;width:121px;"></i>发帖时间</p>
            @foreach (var item in Model.OrderByDescending(r => r.Remark_time))
            {


                <div class="col-md-5" style="height:50px;padding-top:10px;margin-top:40px;">
                    <a href="@Url.Action("Index2", "Luntan", new { id = item.RemarkID })" style="color:black">@Html.DisplayFor(modelItem => item.Title)</a>
                </div>


                <div class="col-md-3" style="height:50px;padding-top:10px;margin-top:40px;"><a href="#" style="color:black">@Html.DisplayFor(modelItem => item.UserName)</a></div>

                <div class="col-md-2" style="height:50px;padding-top:10px;margin-top:40px"> @Html.DisplayFor(modelItem => item.pinglunshu)</div>
                @*<div class="col-md-2" style="height:50px;padding-top:10px;">@Html.DisplayFor(modelItem => item.huifushu)</div>*@

                <div class="col-md-2" style="height:50px;padding-top:10px;margin-top:40px">@Html.DisplayFor(modelItem => item.Remark_time)</div>


            }
        </div>
    </div>



       




