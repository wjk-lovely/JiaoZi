<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 教资服务网</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #tx {
            width: 101px;
            height: 50px;
            float: right;
            margin-top: -49px;
            border: 1px solid #ffffff;
            margin-right: 120px;
            border-radius: 10px;
        }
        #daohanglan li a:hover{
            color:white;
        }
            #tx li {
                list-style: none;
                margin-bottom: 4px;
                border-radius: 4px;
                text-align: center;
            }

            #tx .ll {
                position: relative;
                right: 96px;
                display: none;
            }

        #toTop {
            position: fixed;
            width: 50px;
            height: 50px;
            right: 0;
            bottom: 0;
            display: none;
        }

        footer .container .row {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" style="background-color:black">
        <div class="container-fluid">
            <div style="width:70px;height:70px;float:left;margin-left:30px">
                <img src="~/images/Css/1.png" style="width:70px;height:70px;" />
            </div>
            <div class="navbar-header" style="margin-left:240px;">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("首页", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="daohanglan">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("教资资讯", "Index", "News")</li>
                    <li>@Html.ActionLink("个人空间", "Index", "Kongjian")</li>
                    <li>@Html.ActionLink("备考资源库", "Index", "Resouce")</li>
                    <li>@Html.ActionLink("考试论坛", "Index", "Luntan")</li>
                    <li>@Html.ActionLink("备考书店", "index", "Mall", new { id = Session["User_id"] }, new { target = "blank" })</li>                @*//需调整*@
                </ul>
            </div>
        </div>
        @Html.Partial("TX")
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div id="toTop"><img src="~/images/Css/totop.jpg" style="width:50px;height:50px;" title="回到顶部" /></div>
        <footer>
            <div style="background:red; width: 100%;height: 1px;"></div>
            <div class="container" style="width:500px;margin:0 auto">
                <div class="row">
                    <span>地址：中国-南昌市紫阳大道99号江西师范大学（瑶湖校区）</span>
                </div>
                <div class="row">
                    <span>邮编：330022</span>
                    <span>电话：0791-88120270</span>
                    <span>传真:0791-88120270</span>
                </div>
                <div class="row">
                    <span>技术支持&copy;版权所有:江西师范大学软件学院曾雅琳工作室</span>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</body>
</html>

<script>

    $(window).scroll(function () {
        var height = $(document).scrollTop();
        if (height != 0) {
            $("#toTop").show();
        }
        else
            $("#toTop").hide();
    })
    $("#toTop").click(function () {
        scrollTo(0, 0);
    })
</script>
