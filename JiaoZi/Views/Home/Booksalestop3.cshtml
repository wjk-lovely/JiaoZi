@model IEnumerable<JiaoZi.Models.salestop3>
@{
    ViewBag.Title = "Booksalestop3";
    Layout = null;
    }
<style>
    		.thumbnail {
		    padding: 0 0 15px 0;
		    border: none;
		    border-radius: 0;
		}
		.thumbnail img {
		    width: 100%;
		    height: 100%;
		    margin-bottom: 10px;
		}
</style>

<div id="portfolio" class="container-fluid text-center bg-grey">
    @*<h2>Portfolio</h2>
    <h4>What we have created</h4>*@
    <div class="row text-center">
@foreach (var item in Model)
{
        <div class="col-sm-3">
            <a href="@Url.Action("BooksDetails","Mall",new { id=item.BookID})"style="color:black">
            <div class="thumbnail">
                <img id="top3img" alt="封面" src="@Html.DisplayFor(modelItem=>item.BookImage)" />
                <p><strong>@item.BookName</strong></p>
                <h3>$@item.Price</h3>
                <h4>@item.BookAuthor</h4>
            </div>
            </a>
        </div>
}
    </div>
 </div>

